<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff995B00"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="#FF9800"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleTextAppearance="@style/TransparentText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/drawer_background"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="4dp"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffdddddd"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/about1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="App Details"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />

                        <ProgressBar
                            android:id="@+id/about2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/about1"
                            android:background="#ffdddddd" />

                        <TextView
                            android:id="@+id/about3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about2"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Version 0.2.a"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/about4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about3"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Albigo Alpha Build 2"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/about5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about4"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="SR Labs™  ©2015-2016"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/about6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about5"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="All rights reserved"
                            android:textColor="#666"
                            android:textSize="17sp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/about7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="About Author"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />

                        <ProgressBar
                            android:id="@+id/about8"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/about7"
                            android:background="#ffdddddd" />

                        <TextView
                            android:id="@+id/about9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about8"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Shreyas R"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/about10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about9"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="EEE, DSCE"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/about11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about10"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:src="@drawable/fb"
                            app:backgroundTint="#FF6F83B6"
                            app:rippleColor="#FFF" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/about12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about10"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/about11"
                            android:clickable="true"
                            android:src="@drawable/gp"
                            app:backgroundTint="#FFDD4E42"
                            app:rippleColor="#FFF" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/about13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about10"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/about12"
                            android:clickable="true"
                            android:src="@drawable/tw"
                            app:backgroundTint="#FF79BEF1"
                            app:rippleColor="#FFF" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/about14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Support"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />

                        <ProgressBar
                            android:id="@+id/about15"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/about14"
                            android:background="#ffdddddd" />

                        <TextView
                            android:id="@+id/about16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about15"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Please leave questions, feature requests, bug reports on my forum or through E-mail."
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/about17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about16"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:src="@drawable/xda"
                            app:backgroundTint="#FFEB9537"
                            app:rippleColor="#FFF" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/about18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about16"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/about17"
                            android:clickable="true"
                            android:src="@drawable/so"
                            app:backgroundTint="#FFF58E3E"
                            app:rippleColor="#FFF" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/about19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about16"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/about18"
                            android:clickable="true"
                            android:src="@drawable/gm"
                            app:backgroundTint="#FFC65F54"
                            app:rippleColor="#FFF" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/about20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Thanks to (Contributors)"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />

                        <ProgressBar
                            android:id="@+id/about21"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/about20"
                            android:background="#ffdddddd" />

                        <TextView
                            android:id="@+id/about22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about21"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Anurag Pandey"
                            android:textColor="#666"
                            android:textSize="17sp" />
                        <TextView
                            android:id="@+id/about221"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about21"
                            android:layout_toRightOf="@+id/about22"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="[For 5th 'A' Time Table]"
                            android:textColor="#666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/about23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about22"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="And to all those who supported this app."
                            android:textColor="#666"
                            android:textSize="17sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/about24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:maxLines="3"
                            android:padding="8sp"
                            android:text="Disclaimer"
                            android:textColor="#ff333333"
                            android:textSize="10sp" />

                        <ProgressBar
                            android:id="@+id/about25"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/about24"
                            android:background="#ffdddddd" />

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/about26"
                            android:layout_below="@+id/about25">

                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#666"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:textAllCaps="false"
                                android:text="Disclaimer Policy"
                                android:id="@+id/disclaimer_policy" />
                        </com.balysv.materialripple.MaterialRippleLayout>
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/about27"
                            android:layout_below="@+id/about26">

                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#666"
                                android:textSize="17sp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:text="End User License Agreement (EULA)"
                                android:id="@+id/eula" />
                        </com.balysv.materialripple.MaterialRippleLayout>


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/changelog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/changelog"
            app:backgroundTint="#FF9800"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|right|end"
            app:rippleColor="#FFF" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_recyclerView"
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFFFF"
        android:scrollbars="vertical" />

</android.support.v4.widget.DrawerLayout>

