<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#ff000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="III Semester"
                                android:id="@+id/buttonIIIsem" />

                        </com.balysv.materialripple.MaterialRippleLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#ff000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="IV Semester"
                                android:id="@+id/buttonIVsem" />
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#ff000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="V Semester"
                                android:id="@+id/buttonVsem" />
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#ff000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="VI Semester"
                                android:id="@+id/buttonVIsem" />
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#ff000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="VII Semester"
                                android:id="@+id/buttonVIIsem" />
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:onClick="onClick"
                                android:background="#00ffffff"
                                android:textColor="#ff000000"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="VIII Semester"
                                android:id="@+id/buttonVIIIsem" />
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>